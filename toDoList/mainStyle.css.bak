*{
	padding: 0;
	margin: 0;
	box-sizing: border-box;
}

body{
	height: 35%;
	min-width: 340px;
	top: 50px;
	left: 0;
	right: 0;
	margin: auto;
	padding: 30px 0;
	border-radius: 8px; 
}

#newtask{
	
	position: relative;
	padding: 30px 15px;
	background: #fff;
	border-radius: 5px;
	box-shadow: 0 15px 30px rgba(0,0,0,.3);
}

#newtask input{
	
	border-radius: 5px;
	width: 70%;
}